    "return-type": "json"
  },
  // dead simple power button
  "custom/power": {
    "format": "ÔÄë ",
    "on-click": "wlogout",
    "tooltip": true,
    "tooltip-format": "Power: left click on me to see help"
  },

  // dead simple lock button
  "custom/lock": {
    "format": "ÔÄ£ ",
    "on-click": "hyprlock",
