{
  "layer": "top",
  "position": "top",
  "margin-left": 10,
  "margin-right": 10,
  "spacing": 10,
  "height": 20,
  "margin-top": 10,
  "margin-bottom": 10,
  "exclusive": true,
  "passthrough": false,
  "gtk-layer-shell": true,
  "reload_style_on_change": true,

  "modules-left": ["hyprland/window"],
  "modules-center": ["hyprland/workspaces"],
  "modules-right": [
    "custom/bluetooth",
    "pulseaudio",
    "backlight",
    "network",
    "clock",
    "battery",
    "custom/lock",
    "custom/power"
  ],

  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon}  {capacity}%",
    "format-charging": "{icon}  {capacity}%",
    "format-plugged": "ÔÉß ",
    "format-alt": "{icon}  {time}",
    "format-icons": {
      "default": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"],
      "charging": ["Û∞¢ü", "Û∞¢ú", "Û∞ÇÜ", "Û∞Çá", "Û∞Çà", "Û∞¢ù", "Û∞Çâ", "Û∞¢û", "Û∞Çä", "Û∞Çã", "Û∞ÇÖ"]
    }
  },
  "hyprland/workspaces": {
    "sort-by-name": true,
    "on-click": "activate"
  },
  "hyprland/window": {
    "max-length": 75,
    "separate-outputs": true,
    "format": "Ôåç  Ôãí   {title}",
    "on-click": "wofi --show drun -i"
  },

  "clock": {
    "locale": "C",
    "format": "ÔÄó   {:%H:%M}",
    "format-alt": "ÔÅ≥   {:%a,%b %d}" // Icon: calendar-alt
  },

  "network": {
    "interval": 2,
    "format-wifi": "Ôá´    {signalStrength}%",
    "format-ethernet": "ÔÉÅ   Wired Connected",
    "format-linked": "Linked on {ipaddr}",
    "format-disconnected": "ÔÑß   Disconnected",
    "format-disabled": "ÔÅ±   No Service Enabled",
    "tooltip": false,
    "max-length": 20,
    "min-length": 6,
    "format-alt": "ÔÅõ   {essid}"
  },
  //sudo chmod g+w /sys/class/backlight/*/brightness

  "backlight": {
    // "device": "acpi_video1",
    "format": "{icon} &#8239;{percent}%",
    "format-icons": ["ÔÜÖ "],
    "on-scroll-down": "brightnessctl -c backlight set 5%-",
    "on-scroll-up": "brightnessctl -c backlight set +5%"
  },
  "pulseaudio": {
    "format": "ÔÄ® &#8239;&#8239;&#8239;{volume}%", // Icon for sound with volume percentage
    "format-bluetooth": "Ôäî {volume}%", // Bluetooth icon for Bluetooth devices with volume
    "format-bluetooth-muted": "Ôäî M", // Bluetooth icon with 'M' for muted
    "format-muted": "Û∞ùü", // Muted icon
    "format-icons": {
      "headphone": "ÔÄ•", // Headphone icon
      "hands-free": "üéß", // Hands-free icon
      "headset": "üéß", // Headset icon
      "phone": "üì±", // Phone icon
      "portable": "üîä", // Portable icon
      "car": "üöó", // Car icon
      "default": ["ÔÄ®", "", ""] // Default icon for sound
    },
    "scroll-step": 1,
    "on-click": "pavucontrol",
    "ignored-sinks": ["Easy Effects Sink"],
    "tooltip": true,
    "tooltip-format": "Volume: {volume}%\nDevice: {desc}"
  },
  "custom/bluetooth": {
    "format": "Ôäî ",
    "on-click": "blueman-manager",
    "tooltip": true,
